{
	"name": "nestjs-graphql-best-practice",
	"version": "2.0.0",
	"description": "NestJS GraphQL Best Practice",
	"author": "Chnirt",
	"license": "MIT",
	"keywords": [
		"nestjs",
		"bootstrap",
		"express",
		"apollo-graphql",
		"typeorm"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "NODE_ENV=testing jest -w 1 --config ./jest.config.json --forceExit",
		"test:watch": "NODE_ENV=testing jest -w 1 --watch --forceExit",
		"test:cov": "NODE_ENV=testing jest -w 1 --config ./jest.config.json --coverage --forceExit",
		"test:debug": "NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest -w 1 --runInBand --forceExit",
		"test:e2e": "NODE_ENV=testing jest -w 1 --config ./test/jest-e2e.json --forceExit",
		"gen": "ts-node src/generator/generate-typings.ts",
		"webpack": "webpack --config webpack.config.js",
		"start:hmr": "node dist/main.js",
		"db:seed": "ts-node src/dbseed.ts",
		"doc": "npx compodoc --port 11045 -p tsconfig.json -s",
		"doc:serve": "yarn doc && npx compodoc -s",
		"heroku-postbuild": "yarn --only=dev --no-shrinkwrap && yarn build && yarn gen",
		"now-build": "yarn --only=dev --no-shrinkwrap && yarn build && yarn gen",
		"dump": "ts-node src/dump",
		"coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls"
	},
	"dependencies": {
		"@nestjs/common": "^7.0.0",
		"@nestjs/core": "^7.0.0",
		"@nestjs/graphql": "^7.4.1",
		"@nestjs/platform-express": "^7.0.0",
		"@nestjs/schedule": "^0.4.2",
		"@nestjs/typeorm": "^7.1.0",
		"@types/mongodb": "^3.5.22",
		"apollo-server-cache-memcached": "^0.6.5",
		"apollo-server-express": "^2.15.0",
		"assert": "^2.0.0",
		"axios": "^0.21.1",
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"cache-manager": "^3.3.0",
		"chai": "^4.2.0",
		"chalk": "^4.1.0",
		"class-transformer": "^0.2.3",
		"class-validator": "^0.12.2",
		"cloudinary": "^1.23.0",
		"compression": "^1.7.4",
		"cron": "^1.8.2",
		"csurf": "^1.11.0",
		"dateformat": "^3.0.3",
		"dotenv": "^8.2.0",
		"express-rate-limit": "^5.1.3",
		"graphql": "^15.1.0",
		"graphql-depth-limit": "^1.1.0",
		"graphql-query-complexity": "^0.6.0",
		"graphql-rate-limit": "^2.0.1",
		"graphql-subscriptions": "^1.1.0",
		"graphql-tools": "^6.0.10",
		"graphql-type-json": "^0.3.2",
		"graphql-voyager": "^1.0.0-rc.31",
		"handlebars": "^4.7.6",
		"helmet": "^3.23.1",
		"jsonwebtoken": "^8.5.1",
		"merge-graphql-schemas": "^1.7.8",
		"mongodb": "^3.5.9",
		"morgan": "^1.10.0",
		"multer": "^1.4.2",
		"nodemailer": "^6.4.17",
		"nodemailer-express-handlebars": "^4.0.0",
		"passport": "^0.4.1",
		"passport-facebook": "^3.0.0",
		"passport-facebook-token": "^4.0.0",
		"passport-google-oauth": "^2.0.0",
		"passport-google-plus-token": "^2.1.0",
		"passport-google-token": "^0.1.2",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.5.4",
		"stripe": "^8.132.0",
		"typeorm": "^0.2.25",
		"uuid": "^8.1.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.0.0",
		"@nestjs/schematics": "^7.0.1",
		"@nestjs/testing": "^7.0.0",
		"@types/express": "^4.17.3",
		"@types/jest": "25.2.3",
		"@types/node": "^13.9.1",
		"@types/supertest": "^2.0.8",
		"@typescript-eslint/eslint-plugin": "3.0.2",
		"@typescript-eslint/parser": "3.0.2",
		"eslint": "7.1.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"jest": "26.0.1",
		"prettier": "^1.19.1",
		"progress-bar-webpack-plugin": "^2.1.0",
		"start-server-webpack-plugin": "^2.2.5",
		"supertest": "^4.0.2",
		"ts-jest": "26.1.0",
		"ts-loader": "^7.0.5",
		"ts-node": "^8.6.2",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^3.7.4",
		"webpack": "^4.43.0",
		"webpack-bundle-analyzer": "^3.8.0",
		"webpack-cli": "^3.3.12",
		"webpack-loader-helper": "^1.0.0",
		"webpack-node-externals": "^1.7.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"lint-staged": {
		"*.ts": [
			"yarn format",
			"yarn lint:fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
